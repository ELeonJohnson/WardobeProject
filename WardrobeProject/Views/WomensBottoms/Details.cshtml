@model WardrobeProject.Models.WomensBottom

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Women's Bottom Item</h4>


    <h1 id="detail-h1"> @Html.DisplayFor(model => model.Name)</h1>

    <div>
        <img class="clothing-img" src="@Html.DisplayFor(model => model.Photo)" alt="Alternate Text" />
    </div>

    <p class="p-detail">@Html.DisplayFor(model => model.Occasion) @Html.DisplayFor(model => model.Color)  @Html.DisplayFor(model => model.Type) for @Html.DisplayFor(model => model.Season) </p>

</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.WomensBottomsID }) <img src="https://png.icons8.com/color/20/000000/multi-edit.png"> |
    @Html.ActionLink("Back to List", "Index") <img src="https://png.icons8.com/ultraviolet/20/000000/circled-left.png">
</p>
